<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="main.controllers.DonutController">
    <VBox spacing="12.0" alignment="CENTER" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">

        <Label text="Order Donuts" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

        <HBox spacing="8" alignment="CENTER">
            <Label text="Donut Type:" />
            <ComboBox fx:id="donutTypeCombo" prefWidth="180" onAction="#onTypeChanged" />
        </HBox>

        <VBox spacing="4">
            <Label text="Available Flavors:" />
            <ListView fx:id="flavorList" prefHeight="120" prefWidth="240" onMouseClicked="#onFlavorSelected" />
        </VBox>

        <HBox spacing="8" alignment="CENTER">
            <Label text="Quantity:" />
            <Spinner fx:id="qtySpinner" prefWidth="80" />
        </HBox>

        <ImageView fx:id="itemImage" fitHeight="150" fitWidth="150" preserveRatio="true" />

        <Label fx:id="priceLabel" text="Price: $0.00" style="-fx-font-size: 14px;" />

        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="addBtn" text="Add to Order" onAction="#onAddToOrder" />
            <Button text="Clear" onAction="#onTypeChanged" />
        </HBox>

    </VBox>
</AnchorPane>
