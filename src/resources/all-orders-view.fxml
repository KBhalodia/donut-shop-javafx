<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="main.controllers.AllOrdersController"
            style="-fx-background-color: linear-gradient(to bottom, #fffaf0, #fdebd3);">
    <VBox spacing="15.0" AnchorPane.topAnchor="15" AnchorPane.leftAnchor="15" AnchorPane.rightAnchor="15" AnchorPane.bottomAnchor="15">

        <!-- Title with Orders Image -->
        <HBox spacing="10" alignment="CENTER">
            <ImageView fitHeight="40" fitWidth="40" preserveRatio="true">
                <image>
                    <Image url="@images/orders.jpg"/>
                </image>
            </ImageView>
            <Label text="Store Orders" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
        </HBox>

        <HBox spacing="15" VBox.vgrow="ALWAYS">
            <VBox spacing="5" prefWidth="250">
                <Label text="All Orders:" />
                <ListView fx:id="ordersList" prefHeight="300" onMouseClicked="#onOrderSelected" />
            </VBox>

            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label text="Order Details:" />
                <TextArea fx:id="orderDetailArea" prefHeight="300" editable="false" wrapText="true" />
            </VBox>
        </HBox>

        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="cancelBtn" text="Cancel Selected Order" styleClass="ru-button" onAction="#onCancelOrder" />
            <Button fx:id="exportBtn" text="Export All Orders" styleClass="ru-button" onAction="#onExport" />
            <Button text="Back to Main Menu" styleClass="ru-button" onAction="#onBackToMainMenu" />
        </HBox>

    </VBox>
</AnchorPane>
