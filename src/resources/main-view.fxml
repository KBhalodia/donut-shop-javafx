<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="main.controllers.MainController">

    <!-- HEADER -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20"
              style="-fx-background-color: #AAC8FF; -fx-padding: 20;">
            <Label text="RU Donuts"
                   style="-fx-font-size: 42px; -fx-font-weight: bold; -fx-text-fill: white; -fx-font-family: 'Comic Sans MS', 'Chalkboard SE', 'Marker Felt', cursive;" />
            <Pane HBox.hgrow="ALWAYS"/>
            <ImageView fitHeight="70" fitWidth="70" preserveRatio="true">
                <image>
                    <Image url="@images/donut_icon.png"/>
                </image>
            </ImageView>
        </HBox>
    </top>

    <!-- HOME MENU SCREEN AND TABPANE -->
    <center>
        <StackPane>
            <!-- HOME MENU SCREEN -->
            <GridPane fx:id="homeScreen" hgap="20" vgap="20" style="-fx-padding: 20;">
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS" minWidth="200" percentWidth="50" />
                    <ColumnConstraints hgrow="ALWAYS" minWidth="200" percentWidth="50" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints vgrow="ALWAYS" minHeight="200" percentHeight="50" />
                    <RowConstraints vgrow="ALWAYS" minHeight="200" percentHeight="50" />
                </rowConstraints>
                
                <!-- Quarter 1: Donuts - Row 0, Column 0 -->
                <VBox fx:id="donutsBox" alignment="CENTER" spacing="10" style="-fx-cursor: hand; -fx-background-color: #F5F5F5;" maxWidth="Infinity" maxHeight="Infinity">
                    <ImageView fitWidth="300" fitHeight="200" preserveRatio="true" pickOnBounds="true">
                        <image><Image url="@images/donuts.jpg"/></image>
                    </ImageView>
                    <Label text="Donuts" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                </VBox>
                <GridPane.rowIndex>0</GridPane.rowIndex>
                <GridPane.columnIndex>0</GridPane.columnIndex>

                <!-- Quarter 2: Sandwiches - Row 0, Column 1 -->
                <VBox fx:id="sandwichBox" alignment="CENTER" spacing="10" style="-fx-cursor: hand; -fx-background-color: #F5F5F5;" maxWidth="Infinity" maxHeight="Infinity">
                    <ImageView fitWidth="300" fitHeight="200" preserveRatio="true" pickOnBounds="true">
                        <image><Image url="@images/sandwich.jpg"/></image>
                    </ImageView>
                    <Label text="Sandwiches" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                </VBox>
                <GridPane.rowIndex>0</GridPane.rowIndex>
                <GridPane.columnIndex>1</GridPane.columnIndex>

                <!-- Quarter 3: Coffee - Row 1, Column 0 -->
                <VBox fx:id="coffeeBox" alignment="CENTER" spacing="10" style="-fx-cursor: hand; -fx-background-color: #F5F5F5;" maxWidth="Infinity" maxHeight="Infinity">
                    <ImageView fitWidth="300" fitHeight="200" preserveRatio="true" pickOnBounds="true">
                        <image><Image url="@images/coffee.jpg"/></image>
                    </ImageView>
                    <Label text="Coffee" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                </VBox>
                <GridPane.rowIndex>1</GridPane.rowIndex>
                <GridPane.columnIndex>0</GridPane.columnIndex>

                <!-- Quarter 4: Order Management Buttons (split horizontally) - Row 1, Column 1 -->
                <VBox alignment="CENTER" spacing="15" maxWidth="Infinity" maxHeight="Infinity" style="-fx-background-color: #F5F5F5;">
                    <!-- Orders Placed Button (top) -->
                    <Button fx:id="ordersPlacedBtn" onAction="#showStoreOrdersTab"
                            style="-fx-background-color: #000000; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 20 40; -fx-pref-width: 300; -fx-pref-height: 100; -fx-cursor: hand; -fx-content-display: left;" />
                    
                    <!-- Current Order Button (bottom) -->
                    <Button fx:id="currentOrderBtn" onAction="#showCurrentOrderTab" 
                            style="-fx-background-color: #000000; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 20 40; -fx-pref-width: 300; -fx-pref-height: 100; -fx-cursor: hand; -fx-content-display: left;" />
                </VBox>
                <GridPane.rowIndex>1</GridPane.rowIndex>
                <GridPane.columnIndex>1</GridPane.columnIndex>

            </GridPane>

            <!-- TABPANE (hidden initially) -->
            <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE" visible="false" managed="false">
                <Tab text="Order Coffee">
                    <fx:include source="coffee-view.fxml"/>
                </Tab>

                <Tab text="Order Donuts">
                    <fx:include source="donut-view.fxml"/>
                </Tab>

                <Tab text="Order Sandwiches">
                    <fx:include source="sandwich-view.fxml"/>
                </Tab>

                <Tab text="Current Order">
                    <fx:include source="current-order-view.fxml"/>
                </Tab>

                <Tab text="Store Orders">
                    <fx:include source="all-orders-view.fxml"/>
                </Tab>
            </TabPane>
        </StackPane>
    </center>

</BorderPane>
