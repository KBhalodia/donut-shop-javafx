<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="main.controllers.MainController"
            style="-fx-background-color: linear-gradient(to bottom, #fffaf0, #fdebd3);">

    <VBox spacing="20"
          alignment="TOP_CENTER"
          AnchorPane.topAnchor="20"
          AnchorPane.bottomAnchor="20"
          AnchorPane.leftAnchor="20"
          AnchorPane.rightAnchor="20">

        <!-- Title -->
        <ImageView fitHeight="150" preserveRatio="true">
            <image>
                <Image url="@images/rucafe-logo.png" />
            </image>
        </ImageView>

        <Label text="Main Menu"
               style="-fx-font-size: 18px; -fx-text-fill: #6d4c41;" />

         <!-- Buttons Grid -->
         <GridPane hgap="20" vgap="20" alignment="CENTER" maxWidth="Infinity" VBox.vgrow="ALWAYS">
             <columnConstraints>
                 <ColumnConstraints hgrow="ALWAYS" minWidth="190" prefWidth="190" maxWidth="Infinity" halignment="CENTER" />
                 <ColumnConstraints hgrow="ALWAYS" minWidth="190" prefWidth="190" maxWidth="Infinity" halignment="CENTER" />
             </columnConstraints>

             <rowConstraints>
                 <RowConstraints valignment="CENTER" />
                 <RowConstraints valignment="CENTER" />
                 <RowConstraints valignment="CENTER" />
             </rowConstraints>

             <!-- Row 0 -->
             <Button text="â˜• Order Coffee"
                     maxWidth="Infinity" prefHeight="70"
                     GridPane.rowIndex="0" GridPane.columnIndex="0"
                     GridPane.hgrow="ALWAYS"
                     onAction="#onOpenCoffee"
                     style="
                         -fx-background-radius: 35;
                         -fx-background-color: #f4a261;
                         -fx-text-fill: white;
                         -fx-font-size: 15px;
                         -fx-font-weight: bold;
                         -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.25), 6, 0, 0, 2);
                     " />

             <Button text="ðŸ© Order Donuts"
                     maxWidth="Infinity" prefHeight="70"
                     GridPane.rowIndex="0" GridPane.columnIndex="1"
                     GridPane.hgrow="ALWAYS"
                     onAction="#onOpenDonuts"
                     style="
                         -fx-background-radius: 35;
                         -fx-background-color: #e76f51;
                         -fx-text-fill: white;
                         -fx-font-size: 15px;
                         -fx-font-weight: bold;
                         -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.25), 6, 0, 0, 2);
                     " />

             <!-- Row 1 -->
             <Button text="ðŸ¥ª Order Sandwich"
                     maxWidth="Infinity" prefHeight="70"
                     GridPane.rowIndex="1" GridPane.columnIndex="0"
                     GridPane.hgrow="ALWAYS"
                     onAction="#onOpenSandwich"
                     style="
                         -fx-background-radius: 35;
                         -fx-background-color: #2a9d8f;
                         -fx-text-fill: white;
                         -fx-font-size: 15px;
                         -fx-font-weight: bold;
                         -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.25), 6, 0, 0, 2);
                     " />

             <Button text="ðŸ§¾ Current Order"
                     maxWidth="Infinity" prefHeight="70"
                     GridPane.rowIndex="1" GridPane.columnIndex="1"
                     GridPane.hgrow="ALWAYS"
                     onAction="#onOpenCurrentOrder"
                     style="
                         -fx-background-radius: 35;
                         -fx-background-color: #8d99ae;
                         -fx-text-fill: white;
                         -fx-font-size: 15px;
                         -fx-font-weight: bold;
                         -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.25), 6, 0, 0, 2);
                     " />

             <!-- Row 2 -->
             <Button text="ðŸ“š Store Orders"
                     maxWidth="Infinity" prefHeight="70"
                     GridPane.rowIndex="2" GridPane.columnIndex="0"
                     GridPane.columnSpan="2"
                     GridPane.hgrow="ALWAYS"
                     onAction="#onOpenStoreOrders"
                     style="
                         -fx-background-radius: 35;
                         -fx-background-color: #f2c94c;
                         -fx-text-fill: #5d4037;
                         -fx-font-size: 15px;
                         -fx-font-weight: bold;
                         -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.25), 6, 0, 0, 2);
                     " />
         </GridPane>

        <!-- Content area where other views load -->
        <StackPane fx:id="contentArea"
                   prefHeight="200" prefWidth="600"
                   style="
                       -fx-background-color: #fffaf0;
                       -fx-background-radius: 25;
                       -fx-border-radius: 25;
                       -fx-border-color: #d7ccc8;
                       -fx-border-width: 2;
                       -fx-padding: 20;
                   ">

            <Label text="Welcome to RUcafe â˜•ðŸ©
Choose an option above to start an order!"
                   wrapText="true"
                   style="-fx-font-size: 16px; -fx-text-fill: #6d4c41; -fx-alignment: center;" />
        </StackPane>

    </VBox>
</AnchorPane>
