<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="main.controllers.SandwichController"
            style="-fx-background-color: linear-gradient(to bottom, #fffaf0, #fdebd3);">
    <fx:define>
        <ToggleGroup fx:id="proteinGroup" />
        <ToggleGroup fx:id="breadGroup" />
    </fx:define>

    <VBox spacing="12.0" alignment="CENTER"
          AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">

        <Label text="ðŸ¥ªOrder SandwichðŸ¥ª" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

        <!-- Sandwich Image -->
        <ImageView fitHeight="200" fitWidth="200" preserveRatio="true">
            <image>
                <Image url="@images/sandwich.jpg"/>
            </image>
        </ImageView>

        <HBox spacing="40" alignment="TOP_CENTER">

            <!-- Protein Section -->
            <VBox spacing="8" alignment="TOP_LEFT">
                <Label text="Protein:" styleClass="section-title"/>
                <Separator orientation="HORIZONTAL" />
                <RadioButton text="Beef"    toggleGroup="$proteinGroup"/>
                <RadioButton text="Chicken" toggleGroup="$proteinGroup"/>
                <RadioButton text="Salmon"  toggleGroup="$proteinGroup"/>
            </VBox>

            <!-- Vertical Divider -->
            <Separator orientation="VERTICAL" prefHeight="200" styleClass="divider"/>

            <!-- Bread Section -->
            <VBox spacing="8" alignment="TOP_LEFT">
                <Label text="Bread:" styleClass="section-title"/>
                <Separator orientation="HORIZONTAL"/>
                <RadioButton text="Bagel"       toggleGroup="$breadGroup"/>
                <RadioButton text="Wheat Bread" toggleGroup="$breadGroup"/>
                <RadioButton text="Sourdough"   toggleGroup="$breadGroup"/>
            </VBox>

            <!-- Vertical Divider -->
            <Separator orientation="VERTICAL" prefHeight="200" styleClass="divider"/>

            <!-- Add-ons Section -->
            <VBox spacing="8" alignment="TOP_LEFT">
                <Label text="Add-ons:" styleClass="section-title"/>
                <Separator orientation="HORIZONTAL"/>
                <CheckBox fx:id="cheese"
                          text="Cheese (+$1.00)"/>
                <CheckBox fx:id="lettuce"
                          text="Lettuce (+$0.30)"/>
                <CheckBox fx:id="tomato"
                          text="Tomatoes (+$0.30)"/>
                <CheckBox fx:id="onion"
                          text="Onions (+$0.30)"/>
            </VBox>

        </HBox>

        <HBox spacing="8" alignment="CENTER">
            <Label text="Quantity:" />
            <Spinner fx:id="qtySpinner" prefWidth="80" />
        </HBox>

        <Label fx:id="priceLabel" text="Price: $0.00" style="-fx-font-size: 14px;" />

        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="addBtn"
                    text="Add to Order"
                    styleClass="ru-button"
                    onAction="#onAddToOrder" />
            <Button text="Clear"
                    styleClass="ru-button"
                    onAction="#onSelectionChanged" />
            <Button text="Back to Main Menu"
                    styleClass="ru-button"
                    onAction="#onBackToMainMenu" />
        </HBox>

    </VBox>
</AnchorPane>
